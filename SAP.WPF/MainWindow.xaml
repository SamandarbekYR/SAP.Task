            <Grid Grid.Row="2" 
                  Margin="10">
                <!--Main chart section-->
                <lvc:CartesianChart x:Name="chart1" 
                            Margin="10 40 10 10" 
                            LegendLocation="None" >
                    <lvc:CartesianChart.DataTooltip>
                        <lvc:DefaultTooltip  
                                    Background="Red" 
                                    Foreground="#ffffff" 
                                    BulletSize="6" 
                                    Opacity="0.5"/>
                    </lvc:CartesianChart.DataTooltip>
                    
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis 
                                  Foreground="#90a3b2" 
                                  ShowLabels="True">
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="1" 
                                               Step="1"
                                               Stroke="Aqua"/>
                            </lvc:Axis.Separator>
                            
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Foreground="#90a3b2" 
                                  ShowLabels="True" 
                                  MinValue="0" 
                                  MaxValue="10" >
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="0.1" 
                                               Step="0.5"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>
             
                    <lvc:CartesianChart.Series >
                        <lvc:LineSeries x:Name="seller_post_dg"
                               Opacity="0.1"
                                Fill="#7B3AB7" 
                                StrokeThickness="2"
                                PointGeometrySize="8"
                                Values="0"
                                DataContext="wded">
                            <lvc:LineSeries.Stroke>
                                <LinearGradientBrush>
                                    <GradientStop Color="PaleVioletRed" Offset="1"/>
                                </LinearGradientBrush>
                            </lvc:LineSeries.Stroke>
                        </lvc:LineSeries>

                    </lvc:CartesianChart.Series>

                </lvc:CartesianChart>
            </Grid>
        </Grid>
    </Border>
</Window>
